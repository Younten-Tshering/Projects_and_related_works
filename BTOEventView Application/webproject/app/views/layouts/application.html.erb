<!DOCTYPE html>
<html>
  <head>
    <title>Web8</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'scrape'%>
    <%= stylesheet_link_tag 'ps2'%>
    <%= stylesheet_link_tag 'home'%>
    <%= stylesheet_link_tag 'ps3'%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;" >
    <div class="container-fluid">
    <a  id= "navh" class="navbar-brand" href="/">WAE-2021</a>

    <ul class="nav navbar-nav me-auto mb-2 mb-lg-0">
    

  <% if flash[:error] %>
    <div id="error">
    <p><%= flash[:error] %></p>
    </div>
    <% elsif flash[:alert] %>
    <div>
    <p><%= flash[:alert] %></p>
    </div>
    <% end %>
  
    <% if user_signed_in? %>
      <% if is_admin? %>
      <li class="nav-item">
        <%= link_to 'Admin Page', ps4_admin_path, class: 'button btn btn-dark' %> 
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'button btn btn-primary'%>
      </li>
      <% elsif (user_signed_in? && (User.find_by_id(current_user.id).active == false)) %>
        <li class="nav-item">
        <%= link_to 'User Page', ps4_userp_path, class: 'button btn btn-dark' %>
        <%= link_to 'Events', events_path, class: 'button btn btn-primary' %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'button btn btn-primary'%>
        </li>
      <% elsif (user_signed_in? && (User.find_by_id(current_user.id).active == true)) %>
          <p>your user is banned. </p>
          <%= link_to "Edit Profile", edit_user_registration_path, class: 'button btn btn-primary'%>
      <% end %>



    <% end %>
    </ul>

    <div class="d-flex align-items-center">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
    <li class="nav-item">
    
    <% if user_signed_in? %>
    Welcome
    <%= current_user.email %>! Not you?
    </li>
    <li class="nav-item">
    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </li>   
    <% else %>
    <li  class="nav-item">
    <%= link_to "Sign up", new_user_registration_path , class: "button btn btn-primary btn-sm"%>
    or
    <%= link_to "Sign in", new_user_session_path ,  class: "button btn btn-primary btn-sm"   %>
    <% end %>
    </li>
    </ul>
    </div>

    </nav>

    <%= yield %>
   

    <%= render 'layouts/footer' %>

  </body>
</html>
