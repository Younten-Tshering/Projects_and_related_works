<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

</head>
<body>


    <br>

    <div class="container">
    <div class="split left">
    <div class="centered">
    <h4>NYTimes<h4>
    <% @outt.zip(@outl,@outi) .each do |t,l,i| %>
    <div class="card" style="width: 20rem;">
        <img class="card-img-top" src='<%= i %>' alt= "Card img cap">
        <div class="card-body">
        <p class="card-text"><%= t %><p>
        <a href='<%= l %>' class="btn btn-dark">Read More</a>
        </div>
    </div>
    <% end %>
    </div>
    </div>
    </div>
    
    <div class="container">
    <div class="split right">
    <div class="centered">
    <h4>Bangkok Post<h4>
    <% @outt2.zip(@outl2,@outi2) .each do |k,m,n| %>
    <div class="card" style="width: 20rem;">
        <img class="card-img-top" src='<%= n %>' alt= "Card img cap">
        <div class="card-body">
        <p class="card-text"><%= k %><p>
        <a href='<%= m %>' class="btn btn-dark">Read More</a>
        </div>
    </div>
    <% end %>
    </div>
    </div>
    </div>
    



   
    
</body>
</html>