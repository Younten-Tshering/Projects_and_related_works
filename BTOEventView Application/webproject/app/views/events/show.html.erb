<% if user_signed_in? %>
<% if User.find_by_id(current_user.id).active == true %>
<div class="container">
<p><b>you cannot reach this page</b><p>
<div>
<% else %>
<div class="col-md-4 offset-md-4">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @event.name %></h2>

<p id="notice"><%= notice %></p>

<div class="text-center">
<% if @event.images.attached? %>
  <% @event.images.each do |image| %>
    <% if image.representable? %>
      <image src="<%= (url_for(image)) %>" class="img-fluid img-thumbnail" style="width:200px;height:150px;">
    <% end %>
  <% end %>
<% end %>
</div>


<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Keyword:</strong>
  <%= @event.keyword %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @event.duration %>
</p>

<p>
  <strong>Url:</strong>
  <%= @event.url %>
</p>

<p>
  <strong>Location name:</strong>
  <%= @event.loc_name %>
</p>

<p class='hidden'>
  <strong>Loc lot:</strong>
  <%= @event.loc_lot %>
</p>

<p class='hidden'>
  <strong>Loc lat:</strong>
  <%= @event.loc_lat %>
</p>

<p>
  <strong>Status:</strong>
  <%= @event.status %>
</p>

<p>
  <strong>created_by:</strong>
  <%= User.find_by_id(@event.created_by).email %>
</p>
<% if is_manager? || is_admin? %>
<% if User.find_by_id(@event.created_by).email == current_user.email %>
<%= link_to "Edit", edit_event_path(@event), class: "butevent btn btn-danger btn-sm" %> |
<% end %>
<% end %>
<%= link_to "Back", events_path, class: "butevent btn btn-primary btn-sm" %>

<br><br><br>
</div>
</div>
</div>
<% end %>
<% end %>
