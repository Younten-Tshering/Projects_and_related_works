<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>

  <br>
  <div class="container-fluid"><br>
      <%= form_tag ps2_quotationssearch_path,:method=>'get' do %>
 
        <%= text_field_tag :search,params[:search] %>
        <%= submit_tag 'Search', class: 'btn btn-warning btn-circle' %>
      <% end %>
  </div> 
  <hr/>
    <div class="container-fluid">
      <h3>Quotations</h3>
      <ul class="list-group">
        <% for quotation in @quotations %>
          <li class="list-group-item"><%= h quotation.author_name %>: <%= h quotation.quote %></li>
        <% end %>
      </ul>
      <br>
 
      <%= link_to 'BACK', ps2_quotations_path, class:'btn btn-outline-info' %>
      <br>
    </div>

    <hr>
    <hr>
    <hr>
</body>
</html>
