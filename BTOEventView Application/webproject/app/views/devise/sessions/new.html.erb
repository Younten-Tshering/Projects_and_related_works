<br>
<div class="col-md-4 offset-md-4">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Log in</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-outline mb-4">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, type: 'email', class: 'form-control' %>  
        </div>

        <div class="form-outline mb-4">
          <%= f.label :password, class: 'form-label' %>  
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-4">
        <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-light btn-block mb-4' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-light btn-block mb-4' %>      
        </div>
      <% end %>

    </div>
  </div>
</div>
